# 服务器配置
server:
  port: 8080
  mode: debug  # debug, release, test
  frontend_url: ""  # 前端地址，留空则自动检测，生产环境建议配置如: https://example.com

# 数据库配置
database:
  path: ./data/app.db

# JWT配置
jwt:
  secret: your-jwt-secret-key-change-in-production  # 请修改为随机字符串
  expire_hours: 72

# 审核配置
review:
  min_votes: 10        # 进入二级审核的最小票数
  approval_rate: 70    # 赞率阈值(百分比)

# SMTP邮件配置
smtp:
  host: smtp.example.com        # SMTP服务器地址
  port: 587                     # SMTP端口
  user: "your-email@example.com"
  password: "your-smtp-password"
  from: "your-email@example.com"

# Linux.do OAuth配置
oauth:
  linuxdo:
    client_id: "your-client-id"
    client_secret: "your-client-secret"
    redirect_uri: http://localhost:8080/api/auth/oauth/linuxdo/callback
